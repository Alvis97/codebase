<?xml version="1.0" encoding="utf-8"?>
<LinnearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity">
     
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/onboard_img"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"/>


    <Button
        android:id="@+id/LogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_background_close"
        android:paddingLeft="125dp"
        android:paddingTop="12dp"
        android:paddingRight="125dp"
        android:paddingBottom="12dp"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_grey_background_close"
        android:paddingLeft="125dp"
        android:paddingTop="12dp"
        android:paddingRight="125dp"
        android:paddingBottom="12dp"
        android:text="SignUp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        />

</LinnearLayout>
